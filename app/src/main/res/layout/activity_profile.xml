<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:orientation="vertical"
    android:background="@color/conversate_black">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/legionaire"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/profile_topbar"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:src="@drawable/back_white"
                android:background=""
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/edit_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/edit_white"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background=""
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/more_icon"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background=""
                android:tint="#dfdfdf"
                android:layout_gravity="center_vertical"
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:text="John Dory"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop="-25dp"
        android:paddingLeft="60dp"
        android:paddingRight="25dp"
        android:textColor="@color/conversate_black"
        android:background="@color/conversate_gold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/profile_name"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Info"
            android:textColor="@color/conversate_gold"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="083 324 6879"
                    android:textColor="@color/conversate_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:alpha=".5"
                    android:textColor="@color/conversate_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingVertical="10dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit_white"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background=""/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profile_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="john.dory@gmail.com"
                    android:textColor="@color/conversate_white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:alpha=".5"
                    android:textColor="@color/conversate_white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingVertical="10dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/edit_white"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background=""/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>